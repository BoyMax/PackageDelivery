        //button_id = obj.id;
        var b = document.getElementById("two"); //获取透明层
        b.style.display = "block";  //点击提交显示透明层
    }*/
    function submit() {
     /* var a;
        var arr = document.getElementsByName("rad");
        for (var i = 0; i < arr.length; i++) {
            if (arr[i].checked) {
                a = arr[i].value;
            }
        }
        var c = document.getElementById("two"); //获取透明层
        c.style.display = "none";  //点击提交显示透明层
        var d = document.getElementById(button_id);
        var td = d.parentNode;
        td.removeChild(d);
        var newtext = document.createTextNode(a);
        var newGraf = document.createElement("p");
        newGraf.appendChild(newtext);
        td.appendChild(newGraf);
        */
        
        if ($('input[name="radio"]:checked').length == 0) {
            alert("未选择代收人，提交失败！");
            return;
        }
        var receiverId = $('input[name="radio"]:checked').val();
        alert(receiverId);
        $.ajax({
            type: "POST",
            url: '@Url.Action("ConfirmReceivers","Orders")',
            data: {
                'userId': receiverId,
                'orderId': selectOrder,
            },
            dataType: 'json',
            success: function (data) {
                if (data == "SUCCESS") {
                    alert("选择成功");
                    window.location.reload();
                }
                else {
                    alert("选择失败");
                }
            },
            error: function () { alert("出错了"); }
        });
    }

    function confirmOrder(obj) {
        if (confirm("确认已收到包裹？")) {
            var id = $(obj).closest("tr").find("#item_ID").val();
            $.ajax({
                type: "POST",
                url: '@Url.Action("ConfirmOrder", "Orders")',
                data: { 'id': id },
                dataType: 'json',
                success: function (data) {
                    if (data == "SUCCESS") {
                        alert("确认接收");
                        window.location.reload();
                    }
                    else {
                        alert("确认失败");
                    }
                },
                error: function () { alert("出错了"); }
            });
        }
    }

    function deleteOrder(obj) {
        if (confirm("确认删除该订单？")) {
            var id = $(obj).closest("tr").find("#item_ID").val();
            $.ajax({
                type: "POST",
                url:'@Url.Action("DeleteOrder","Orders")',
                data: { 'id': id},
                dataType: 'json',
                success:function(data){
                    if(data=="SUCCESS"){
                        alert("删除成功");
                        window.location.reload();
                    }
                    else{
                        alert("删除失败");
                    }
                },
                error :function(){alert("出错了");}
            });
        }
    }

    var commentId;
    function comment(obj) {
        $('#comment_modal').modal();
        var orderId = $(obj).closest("tr").find("#item_ID").val();
        commentId = orderId;
        $('#c_orderId').text(orderId);
        $.ajax({
            type: "POST",
            url:'@Url.Action("getRcvrName","Orders")',
            data: { 'id': orderId },
            dataType: 'json',
            success:function(data){               
                 $('#c_name').text(data);               
            },
            error :function(){alert("出错了");}
        });
    }

    function commentSubmit() {
        var mark = $("#c_mark").val();
        if (mark > 5 || mark < 1)
        {
            alert("评分范围为 1-5");
            return;
        }
        $.ajax({
            type: "POST",
            url: '@Url.Action("commentOrder", "Orders")',
            data: {
                'id': commentId,
                'mark': mark,
                'remark': $("#c_rmk").val()
            },
            dataType: 'json',
            success: function (data) {
                if (data == "SUCCESS") {
                    alert("评论成功");
                }
                else {
                    alert("评论失败");
                }
            },
            error: function () { alert("出错了"); }
        });
    }
</script>