@using Delivery.Models
@model LoginViewModel
@{
    Layout = null;
    //ViewBag.Title = "登录";
}

@*<h2 class="loginTitle"  >@ViewBag.Title</h2>*@

<html>
<head>
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</head>


<body>

    <img class="logo" src="../Content/logo.png">
    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "auth-form-body", role = "form" }))
            {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Account)
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Account, new { @class = "form-control input-block" })
                            @Html.ValidationMessageFor(m => m.Account, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-block" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @*<div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe)
                                </div>
                            </div>
                        </div>*@
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="登录" class="btn btn-primary btn-block" />
                        </div>
                    </div>

                    @* 在为密码重置功能启用帐户确认后启用此项
                        <p>
                            @Html.ActionLink("忘记了密码?", "ForgotPassword")
                        </p>*@
                }

            </section>
            <p class="create-account-callout">
                @Html.ActionLink("注册为新用户", "Register")
            </p>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
